<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_keyboard"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"

    android:background="#606060">

    <TableRow>

        <Button
            android:id="@+id/bt_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="清除"
            android:textColor="@color/white"

            />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="1"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/bt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="3"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="4"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/bt_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="5"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="6"
            android:textColor="@color/white"

            />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="7"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/bt_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="8"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/bt_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="9"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="."
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/bt_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="0"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/bt_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="VOL"
            android:textColor="@color/white"

            />

    </TableRow>

    <TableRow>

        <SeekBar
            android:id="@+id/sb_change_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="100"
            android:progressDrawable="@drawable/my_seekbar"
            android:thumb="@drawable/thumb_not_click"
            android:thumbOffset="0dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tv_percent_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:gravity="center"
            android:text="＜"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0%"
            android:textColor="@color/colorOrange"

            />

        <TextView
            android:id="@+id/tv_percent_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard"
            android:gravity="center"
            android:text="＞"
            android:textColor="@color/white"

            />
    </TableRow>


</TableLayout>